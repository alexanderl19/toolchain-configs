{
	"name": "toolchain-configs",
	"scripts": {
		"build": "turbo build",
		"changeset": "changeset",
		"dev": "turbo dev",
		"format:check": "pnpm format:package-json --check && pnpm biome format .",
		"format:package-json": "sort-package-json 'package.json' 'packages/*/package.json'",
		"format:write": "pnpm format:package-json && pnpm biome format --write .",
		"link:check": "pnpm biome lint .",
		"link:sort": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write .",
		"link:write": "pnpm biome lint --write .",
		"release": "changeset publish",
		"version-packages": "changeset version"
	},
	"devDependencies": {
		"@alexanderliu/biome-config-linter": "workspace:*",
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "2.27.1",
		"eslint": "9.2.0",
		"sort-package-json": "3.0.0",
		"turbo": "1.13.3",
		"typescript": "5.8.2"
	},
	"packageManager": "pnpm@9.1.0",
	"engines": {
		"node": ">=18"
	}
}
